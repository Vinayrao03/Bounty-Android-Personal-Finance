<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vinay.personalfinance">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ViewAccount"
            android:label="@string/title_activity_view_account" >
        </activity>
        <activity
            android:name=".ViewCategory"
            android:label="@string/title_activity_view_account" >
        </activity>
        <activity
            android:name=".ViewAllTransaction"
            android:label="@string/title_activity_view_all_transaction" >
        </activity>

        <activity
            android:name=".AddNewTransactionActivity"
            android:label="Add New Transaction" >
        </activity>
    </application>
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />



</manifest>
